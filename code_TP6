# Estimation par backfitting dans les modèles additifs non linéaires
library(nlme)
library(mgcv)

### Etude par Simulation



### Données pollution
# fonctions
f1 = function(x){
	f1 = x^2 - 1
}

f2 = function(x){
	f2 = x/2
}

f3 = function(x){
	f3 = 0.2*x^11*(10*(1-x))^6+10*(10*x)^3 *(1-x)^10
}

# Simulation
n = 1000
x1 = rnorm(n, mean=0, sd=1)
x2 = rnorm(n, mean=0, sd=1)
x3 = runif(n, min=0, max=1)
